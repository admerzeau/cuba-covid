{
  "name": "covid-estimates-cu",
  "version": "1.0.0",
  "description": "A basic backend providing historical data for covid-2 in Cuba",
  "main": "index.js",
  "scripts": {
    "lint": "eslint . --ext .ts",
    "build": "npx tsc -p tsconfig.prod.json",
    "start": "node dist/index.js",
    "start:prod": "node dist/index.js",
    "start:dev": "nodemon -r dotenv/config --exec ts-node src/index.ts",
    "test": "jest",
    "test:dev": "jest --watchAll",
    "coverage": "jest --coverage",
    "newman": "sleep 5 && newman run postman_collection/functional-test.postman_collection.json --bail",
    "functional-test": "PORT=3000 npm-run-all -p -r start:dev newman"
  },
  "author": "Angel Ulice Tabares Gonzalez <taho2509@gmail.com>",
  "license": "ISC",
